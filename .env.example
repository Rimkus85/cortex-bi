# ===== CÓRTEX BI - Configuração de Ambiente =====
# Copie este arquivo para .env e preencha com seus valores

# ===== SERVIDOR =====
HOST=0.0.0.0
PORT=5000
DEBUG=False
SECRET_KEY=sua-chave-secreta-aqui

# ===== SQL SERVER =====
SQL_SERVER_HOST=servidor.database.windows.net
SQL_SERVER_PORT=1433
SQL_SERVER_DATABASE=vendas_db
SQL_SERVER_USERNAME=seu_usuario
SQL_SERVER_PASSWORD=sua_senha

# ===== MACHINE LEARNING =====
ML_ENABLED=True
ML_MODEL_PATH=data/models/

# ===== DETECÇÃO DE ANOMALIAS =====
ANOMALY_DETECTION_ENABLED=True
ANOMALY_CONTAMINATION=0.1
ANOMALY_THRESHOLD=-0.5
ANOMALY_MIN_SAMPLES=20
ANOMALY_RETRAIN_INTERVAL=86400

# ===== MONITORAMENTO PROATIVO =====
PROACTIVE_MONITORING_ENABLED=True
MONITORING_INTERVAL=300
MONITORING_METRICS=vendas,custos,receita,lucro

# ===== ALERTAS =====
ALERT_ENABLED=True
ALERT_CHANNELS=email,teams,webhook
ALERT_SEVERITY_THRESHOLD=medium

# ===== EMAIL (para alertas) =====
ALERT_EMAIL_TO=gerente@empresa.com,diretor@empresa.com
ALERT_EMAIL_FROM=cortexbi-alerts@empresa.com
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=cortexbi@empresa.com
SMTP_PASSWORD=sua-senha-email

# ===== MICROSOFT TEAMS (para alertas) =====
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/seu-webhook-url

# ===== WEBHOOK CUSTOMIZADO =====
CUSTOM_WEBHOOK_URL=https://seu-sistema.com/api/alerts
CUSTOM_WEBHOOK_AUTH_TOKEN=seu-token-de-autenticacao

# ===== POWER BI =====
POWERBI_TENANT_ID=seu-tenant-id
POWERBI_CLIENT_ID=seu-client-id
POWERBI_CLIENT_SECRET=seu-client-secret

# ===== APIS EXTERNAS =====
API_ANALYTICS_TOKEN=seu-token-analytics
ERP_API_USER=api_user
ERP_API_PASSWORD=senha_erp

# ===== SHAREPOINT =====
SHAREPOINT_SITE_URL=https://empresa.sharepoint.com/sites/dados
SHAREPOINT_CLIENT_ID=sharepoint-client-id
SHAREPOINT_CLIENT_SECRET=sharepoint-client-secret
SHAREPOINT_TENANT_ID=tenant-id-sharepoint

# ===== LOGS =====
LOG_LEVEL=INFO
LOG_FILE=logs/cortexbi.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

